<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/excellence_layout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="0dp"
                android:background="@drawable/border2">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:text="Preferred Medium"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="#010139" />

                <EditText
                    android:id="@+id/medium"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:background="#00000000"/>
                <ImageButton
                    android:id="@+id/privacy_medium"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/open_privacy"
                    android:paddingRight="5dp"
                    android:background="#00000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="0dp"
                android:background="@drawable/border2">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:text="Preferred Class"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="#010139" />

                <EditText
                    android:id="@+id/preferred_class"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:background="#00000000"/>
                <ImageButton
                    android:id="@+id/privacy_class"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/open_privacy"
                    android:paddingRight="5dp"
                    android:background="#00000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="0dp"
                android:background="@drawable/border2">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:text="Preferred Group"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="#010139" />

                <Spinner
                    android:id="@+id/preferred_group"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:entries="@array/group_array"
                    android:background="#00000000"/>
                <ImageButton
                    android:id="@+id/privacy_group"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/open_privacy"
                    android:paddingRight="5dp"
                    android:background="#00000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="0dp"
                android:background="@drawable/border2">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:text="Preferred Subject"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="#010139" />

                <EditText
                    android:id="@+id/preferred_subject"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:background="#00000000"/>
                <ImageButton
                    android:id="@+id/privacy_subject_list"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/open_privacy"
                    android:paddingRight="5dp"
                    android:background="#00000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="0dp"
                android:background="@drawable/border2">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:text="Preferred Location"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="#010139" />

                <EditText
                    android:id="@+id/preferred_location"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:background="#00000000"/>
                <ImageButton
                    android:id="@+id/privacy_area"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/open_privacy"
                    android:paddingRight="5dp"
                    android:background="#00000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="0dp"
                android:background="@drawable/border2">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:text="Preferred Days Per Week/Month"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="#010139" />

                <EditText
                    android:id="@+id/preferred_days_per_week"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:background="#00000000"/>
                <ImageButton
                    android:id="@+id/privacy_days_per_week"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/open_privacy"
                    android:paddingRight="5dp"
                    android:background="#00000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="0dp"
                android:background="@drawable/border2">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="120dp"
                    android:text="Preferred Minimum Salary"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="#010139" />

                <EditText
                    android:id="@+id/preferred_minimum_salary"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:background="#00000000"/>
                <ImageButton
                    android:id="@+id/privacy_salary"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:src="@drawable/open_privacy"
                    android:paddingRight="5dp"
                    android:background="#00000000"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>