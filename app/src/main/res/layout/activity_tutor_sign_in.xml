<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".candidate_tutor.TutorSignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="0dp"
            android:src="@drawable/main_main"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:onClick="goToBackPageActivity"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18.03dp"
            android:layout_marginTop="74.72dp"
            android:src="@drawable/welcome_back" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110.341dp"
            android:src="@drawable/log_in_" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="275dp"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="50dp"
                android:hint="Enter email address"
                android:inputType="textEmailAddress"
                android:layout_centerHorizontal="true"
                android:background="@drawable/email_edit_text_sign_in"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp"/>


            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="46.54dp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="15dp"
                android:paddingRight="50dp"
                android:inputType="textPassword"
                android:hint="Enter password"
                android:paddingTop="7dp"
                android:background="@drawable/edit_text_password"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Switch
                    android:id="@+id/switch_bar"
                    android:layout_width="55dp"
                    android:layout_height="10dp"
                    android:trackTint="@color/DodgerBlue"
                    android:thumbTint="@color/Blue" />

                <ImageView
                    android:layout_width="72.13dp"
                    android:layout_height="12.90dp"
                    android:src="@drawable/remember_me"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/switch_bar"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="87.31dp"
                    android:layout_height="12.90dp"
                    android:src="@drawable/forgot_password_text"
                    android:layout_gravity=""
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="181.45dp"
            android:layout_height="66dp"
            android:layout_marginStart="105.09dp"
            android:layout_marginTop="477.22dp"
            android:src="@drawable/sign_in_background"
            android:onClick="signInCompletion"/>

        <ImageView
            android:layout_width="53.53dp"
            android:layout_height="21.81dp"
            android:layout_marginStart="169.65dp"
            android:layout_marginTop="491.13dp"
            android:src="@drawable/log_in_text_white"/>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="70dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:layout_centerHorizontal="true"
                android:text="Or using"
                android:textStyle="bold"
                android:textColor="@color/Black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp">
                <ImageView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facebook_logo"
                    android:layout_margin="7dp"/>

                <ImageView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/google_logo"
                    android:onClick="goToSignInWithGoogle"
                    android:layout_margin="7dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="660dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/contrail_one"
                android:text="Don't have account?"
                android:textColor="@color/LightSlateGray"
                android:textSize="12dp"
                android:paddingRight="5dp"
                android:gravity="bottom"
                android:paddingBottom="2dp"/>
            <TextView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sign Up"
                android:layout_gravity="top"
                android:textColor="@color/Blue"
                android:paddingLeft="5dp"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:onClick="goToTutorSignUpActivity"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>