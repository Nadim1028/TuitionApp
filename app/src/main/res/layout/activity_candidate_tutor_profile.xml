<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AntiqueWhite"
    android:orientation="vertical"
    tools:context=".CandidateTutor.CandidateTutorProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="BACK"
                android:visibility="visible"
                android:onClick="goToHomePageActivity" />

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="@color/Green"/>

            <TextView
                android:id="@+id/email"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/MediumBlue"/>

            <TextView
                android:id="@+id/phoneNumber"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/MediumBlue"/>

            <TextView
                android:id="@+id/gender"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/MediumBlue"/>

            <TextView
                android:id="@+id/areaAddress"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/MediumBlue"/>

            <TextView
                android:id="@+id/currentPosition"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/MediumBlue"/>

            <TextView
                android:id="@+id/instituteName"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/MediumBlue"/>

            <TextView
                android:id="@+id/subject"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/MediumBlue"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textSize="20dp"
                android:text="REFERENCE:"
                android:textColor="@color/Navy"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/referenceTextView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="@color/WhiteSmoke"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="ID CARD PICTURE:"
                android:textColor="@color/Navy"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/idCardImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/approveButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Approve"
                android:textColor="@color/AliceBlue"
                android:background="@color/Green"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:padding="20dp"
                android:visibility="gone"
                android:onClick="approveCandidateTutorAsAVerifiedTutor"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>