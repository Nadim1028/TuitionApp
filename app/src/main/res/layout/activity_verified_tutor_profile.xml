<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AliceBlue"
    android:weightSum="20"
    android:orientation="vertical"
    tools:context=".verified_tutor.VerifiedTutorProfileActivity">


    <LinearLayout
        android:id="@+id/upBar"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:background="@color/SkyBlue">

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/profilePicImageView"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="BACK"
                android:visibility="visible"
                android:onClick="goToBackPageActivity" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/DarkOrange"/>

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/AliceBlue"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/phoneNumber"
                    android:textSize="18dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Navy"/>

                <TextView
                    android:id="@+id/gender"
                    android:textSize="18dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Navy"/>

                <TextView
                    android:id="@+id/areaAddress"
                    android:textSize="18dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Navy"/>

                <TextView
                    android:id="@+id/currentPosition"
                    android:textSize="18dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Navy"/>

                <TextView
                    android:id="@+id/instituteName"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/Navy"/>

                <TextView
                    android:id="@+id/subject"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/Navy"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/medium"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@color/DarkMagenta"/>

                <TextView
                    android:id="@+id/preferredClass"
                    android:textSize="17dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkMagenta"/>

                <TextView
                    android:id="@+id/preferredGroup"
                    android:textSize="17dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkMagenta"/>

                <TextView
                    android:id="@+id/preferredSubject"
                    android:textSize="17dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkMagenta"/>

                <TextView
                    android:id="@+id/daysPerWeekOrMonth"
                    android:textSize="17dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkMagenta"/>

                <TextView
                    android:id="@+id/salary"
                    android:textSize="17dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/DarkMagenta"/>

                <TextView
                    android:id="@+id/reportTextView"
                    android:text="Report:"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Red"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/reportLayout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/AliceBlue"
                    android:visibility="gone">
                    <ListView
                        android:id="@+id/reportList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Beige"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="8"
        android:layout_margin="10dp"
        android:background="@color/AliceBlue">

        <Button
            android:id="@+id/sendMessageRequestButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/Yellow"
            android:onClick="sendMessageRequestByGuardian"
            android:padding="20dp"
            android:layout_weight="4"
            android:textSize="12dp"
            android:layout_marginRight="5dp"
            android:text="send an initial message"
            android:visibility="gone" />

        <Button
            android:id="@+id/reportButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/Yellow"
            android:layout_marginLeft="5dp"
            android:onClick="reportIDByGuardian"
            android:padding="20dp"
            android:text="Report ID"
            android:visibility="gone" />

        <Button
            android:id="@+id/blockButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:background="@color/Red"
            android:text="Block Tutor"
            android:visibility="gone"
            android:onClick="blockVerifiedTutorByAdmin"/>
    </LinearLayout>

</LinearLayout>